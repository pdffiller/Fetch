# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.sh]
indent_style = tab

[*.{php,xml,json}]
indent_style = space

[*.yml]
indent_size = 4
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false
